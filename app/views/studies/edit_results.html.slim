h3.text-primary
  = fa_icon 'edit', text: "「#{@subject.name}」の成績を編集"

.edit-results.row
  .col-md-8.mx-auto
    = form_for :study, url: update_results_path, method: :put do
      table.table.table-striped
        thead
          th 学籍番号
          th 名前
          th 点数
        tbody
          - @studies.each do |study|
            = fields_for "study[]", study do |f|
              tr
                td = study.student.code
                td = study.student.name
                td.score-column = f.number_field :score, class: 'form-control', step: :any
      = button_tag type: :submit,  class: 'btn btn-success'  do
        = fa_icon 'calculator', text: '更新する'
